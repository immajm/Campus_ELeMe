<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/editaddress_t"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/editaddress_toolbar"
            android:paddingLeft="20dp"
            app:title="添加地址"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            app:titleTextColor="@color/white"

            />
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/editaddress_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border1">

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="联系人" />
            <EditText
                android:id="@+id/edit_contactname"
                android:layout_width="300dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border1">

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="电话" />
            <EditText
                android:id="@+id/edit_contacttel"
                android:layout_width="300dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border1">

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="省" />
            <EditText
                android:id="@+id/edit_province"
                android:layout_width="300dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border1">

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="市" />
            <EditText
                android:id="@+id/edit_town"
                android:layout_width="300dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border1">

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="区(县)" />
            <EditText
                android:id="@+id/edit_block"
                android:layout_width="300dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border1">

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="详细地址" />
            <EditText
                android:id="@+id/edit_specific"
                android:layout_width="300dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="10dp"

            android:id="@+id/edit_btn_save"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="保存并使用"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:background="@drawable/button_add"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>