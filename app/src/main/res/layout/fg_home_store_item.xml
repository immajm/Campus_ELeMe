<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/radius1">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:id="@+id/Home_ShopIcon"
            app:siRadius="20dp"/>

        <TextView
            android:id="@+id/Home_ShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店名"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="味道真的很不错，分量也蛮多，还会再来"
            android:id="@+id/Home_Introduce"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/ic_star"
                android:paddingRight="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:textStyle="bold"
                android:textSize="14sp"
                android:id="@+id/Home_Level"
                android:textColor="#7992dd"
                android:paddingRight="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="人均:￥"
                android:textColor="#7992dd"
                android:paddingRight="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textStyle="bold"
                android:textSize="14sp"
                android:id="@+id/Home_agvCost"
                android:textColor="#7992dd"
                android:paddingRight="15dp" />
        </LinearLayout>


</LinearLayout>