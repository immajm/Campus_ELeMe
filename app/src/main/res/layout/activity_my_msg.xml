<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/msg_t"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/msg_toolbar"
            android:paddingLeft="20dp"
            app:title="我的信息"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            app:titleTextColor="@color/white"

            />
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/msg_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border5">

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="用户名" />
            <EditText
                android:inputType=""
                android:id="@+id/msg_customername"
                android:layout_width="270dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border5">

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="性别" />
            <EditText
                android:id="@+id/msg_sex"
                android:layout_width="270dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border5">

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="密码" />
            <EditText
                android:id="@+id/msg_pwd"
                android:layout_width="270dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border5">

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="手机号码" />
            <EditText
                android:id="@+id/msg_tel"
                android:layout_width="270dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border5">

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="邮箱" />
            <EditText
                android:id="@+id/msg_email"
                android:layout_width="270dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border5">

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="所在城市" />
            <EditText
                android:id="@+id/msg_city"
                android:layout_width="270dp"
                android:layout_height="50dp"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"

            android:id="@+id/msg_btn_save"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:background="@drawable/button_add"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>